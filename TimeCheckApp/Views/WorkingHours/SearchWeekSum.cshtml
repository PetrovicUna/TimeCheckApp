@model IEnumerable<TimeCheckApp.Models.SumDto>

@{
    ViewData["Title"] = "SearchSum";
}

<h1 style="text-align:center;">Sum View</h1>
<br />

<div>
    <div style="display:inline-block; margin-right:40px;">
        <h5>Week Quota</h5>  <label>@ViewBag.Week</label>
    </div>
</div>

<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PersonName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExtendedOvertimeHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OvertimeHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegularHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AbsenceHours)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PersonName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExtendedOvertimeHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OvertimeHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegularHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AbsenceHours)
            </td>
            @if (@ViewBag.Week > item.SumHours)
            {
                <td>
                    <img src="~/images/exclamation-mark.png" />
                </td>
            }
            </tr>
        }
    </tbody>
</table>
